<Window x:Class="WpfApplication_Оголошення_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication_Оголошення_"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200"
        Background="#333" ResizeMode="CanResizeWithGrip" Closing="FormClosing" Closed="FormClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="239*"/>
            <ColumnDefinition Width="238*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="5" Content="+ Подать объявление" Click="ButtonAddadvert_Click"/>
        <Button Grid.Column="6" Content="Войти" Click="Click_Autorization"/>
        <TextBlock Grid.Column="7" Name="Us"/>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="0,35,0,34" Grid.ColumnSpan="3"/>
        <TextBox Grid.Column="5" Grid.Row="1" Margin="0,35,0,34"/>
        <ComboBox Grid.Column="6" Grid.Row="1" Name="heading" Margin="0,37,0,38"/>
    </Grid>
</Window>
